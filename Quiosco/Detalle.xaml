<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="Quiosco.Detalle"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Quiosco"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800"
    WindowTitle="Detalle"
    >
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="230" />
            <ColumnDefinition />-->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--<Button Grid.Column="0" Grid.Row="0" Click="Button_Click" >Try</Button>-->
        <DockPanel Grid.Row="0">
            <StackPanel DockPanel.Dock="Top" Background="#003A70" Margin="0,0,0,0">
                <Label Style="{StaticResource listHeaderTextStyle}">APOLO ATM</Label>
                <Label Style="{StaticResource listHeaderTextStyle}">BOLETAJE PENDIENTE DE RECAUDAR</Label>
            </StackPanel>
        </DockPanel>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--<Button Grid.Column="0">Click</Button>
            <Button Grid.Column="1">Click 2</Button>-->
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <Border Background="#C0DCF2" CornerRadius="12" Padding="5,18,17,18" Margin="15" BorderBrush="Black" BorderThickness="1" >
                    <StackPanel>
                        <TextBlock Text="Unidad" FontSize="15" FontWeight="Bold" TextAlignment="Center" />
                        <TextBlock Text="U-1248" FontSize="25" FontWeight="Bold" TextAlignment="Center" />
                    </StackPanel>
                </Border>

                <Border Background="#C0DCF2" CornerRadius="12" Padding="5,18,17,18" Margin="15" BorderBrush="Black" BorderThickness="1" >
                    <StackPanel>
                        <TextBlock Text="Vuelta" FontSize="15" FontWeight="Bold" TextAlignment="Center" />
                        <TextBlock Text="2" FontSize="29" FontWeight="Bold" TextAlignment="Center" />
                    </StackPanel>
                </Border>

                <Border Background="#1B7FCC" CornerRadius="12" Padding="5,18,17,18" Margin="15" BorderBrush="Black" BorderThickness="1" >
                    <StackPanel>
                        <TextBlock Text="Dif. Barras" FontSize="15" FontWeight="Bold" TextAlignment="Center" Foreground="White" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                            <StackPanel Margin="5">
                                <TextBlock Text="2" FontSize="23" FontWeight="Bold" Foreground="White" TextAlignment="Center" />
                                <TextBlock Text="V. Ant." FontSize="10" FontWeight="Bold" Foreground="White" TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Margin="5">
                                <TextBlock Text="-" FontSize="23" FontWeight="Bold" Foreground="White" TextAlignment="Center" />
                                <TextBlock Text="V. Act." FontSize="10" FontWeight="Bold" Foreground="White" TextAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#7B8388" CornerRadius="12" Padding="5,18,17,18" Margin="15" BorderBrush="Black" BorderThickness="1" >
                    <StackPanel>
                        <TextBlock Text="Dif. Minutos" FontSize="15" FontWeight="Bold" TextAlignment="Center" Foreground="White" />
                        <TextBlock Text="1*" FontSize="24" FontWeight="Bold" TextAlignment="Center" Foreground="White" />
                        <TextBlock Text="Acumulados" FontSize="12" FontWeight="Bold" TextAlignment="Center" Foreground="White" />
                    </StackPanel>
                </Border>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Grid x:Name="Test" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Título -->
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Boletaje" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10" />

                    <!-- Encabezado -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Tarifa" FontSize="15" FontWeight="Bold" Background="#003A70" Foreground="White" Padding="9,10" TextAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Cantidad" FontSize="15" FontWeight="Bold" Background="#003A70" Foreground="White" Padding="9,10" TextAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Importe" FontSize="15" FontWeight="Bold" Background="#003A70" Foreground="White" Padding="9,10" TextAlignment="Center" />
                    <!-- Total -->
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="Total:" FontSize="15" FontWeight="Bold" Background="#003A70" Foreground="White" Padding="9,10" TextAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="" FontSize="15" FontWeight="Bold" Background="#1B7FCC" Foreground="White" Padding="9,10" TextAlignment="Center" x:Name="TotalBoletaje"/>
                </Grid>





                <Grid x:Name="Diferencias" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Título -->
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Text="Diferencias" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10" />

                    <!-- Encabezado -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Diferencia" FontSize="15" FontWeight="Bold" Background="#003A70" Foreground="White" Padding="9,10" TextAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="Cantidad" FontSize="15" FontWeight="Bold" Background="#003A70" Foreground="White" Padding="9,10" TextAlignment="Center" />
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Importe" FontSize="15" FontWeight="Bold" Background="#003A70" Foreground="White" Padding="9,10" TextAlignment="Center" />

                    <!-- Filas de datos -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Barras v. ant." FontSize="14" Background="#003A70" Foreground="White" Padding="9,10" TextAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="2" FontSize="14" Background="#C0DCF2" Padding="9,10" TextAlignment="Center" />
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="$22.00" FontSize="14" Background="#C0DCF2" Padding="9,10" TextAlignment="Center" />

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Barras v. act." FontSize="14" Background="#003A70" Foreground="White" Padding="9,10" TextAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="-" FontSize="14" Background="#C0DCF2" Padding="9,10" TextAlignment="Center" />
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="-" FontSize="14" Background="#C0DCF2" Padding="9,10" TextAlignment="Center" />

                    <!-- Total de filas -->
                    <!--<TextBlock Grid.Row="4" Grid.Column="0" Text="" FontSize="15" FontWeight="Bold" Background="#003A70" Foreground="White" Padding="9,0" TextAlignment="Center" />-->
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="Total:" FontSize="15" FontWeight="Bold" Background="#003A70" Foreground="White" Padding="9,10" TextAlignment="Center" />
                    <TextBlock Grid.Row="4" Grid.Column="2" Text="$22.00" FontSize="15" FontWeight="Bold" Background="#1B7FCC" Foreground="White" Padding="9,10" TextAlignment="Center" />

                    <!-- Total a depositar -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Text="Total a depositar:" FontSize="27" FontWeight="Bold" TextAlignment="Right" Padding="10,0" />
                    <TextBlock Grid.Row="5" Grid.Column="2" Text="$600.00" FontSize="22" FontWeight="Bold" TextAlignment="Center" Padding="10,0" />
                </Grid>


            </StackPanel>
        </Grid>
    </Grid>
</Page>